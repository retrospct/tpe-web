{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES6",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/lib": ["./src/lib"],
      "@/lib/*": ["./src/lib/*"],
      "@/drizzle/*": ["./src/drizzle/*"],
      "@/emails": ["./src/emails"],
      "@/emails/*": ["./src/emails/*"],
      "@/prismic/*": ["./src/prismic/*"],
      "@/slices": ["./src/slices"],
      "@/slices/*": ["./src/slices/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/prismicio": ["./src/prismicio.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
